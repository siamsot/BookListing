<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/search_title_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:text="Title:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/search_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:hint="Please enter the title here"
            android:paddingBottom="8dp"/>
        <TextView
            android:id="@+id/search_author_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="Author:"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/search_author_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:hint="Enter author here"
            android:paddingBottom="8dp" />
        <TextView
            android:id="@+id/search_subject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:text="Subject"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/search_subject_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="Enter the subject of the book here"
            android:paddingBottom="8dp" />
        <Button
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_horizontal"
            android:background="#965f7a9c"
            android:text="Search" />
    </LinearLayout>
</ScrollView>